.btn
  display: inline-block
  padding: 2px 6px
  margin-bottom: 0
  text-align: center
  vertical-align: middle
  cursor: pointer
  border: 0
  background: #BAACAC
  transition: background-color 70ms linear
  &.btn-action
    background: #E01533
    color: white
    &:hover
      background: #CA132E
    &:active
      background: #B61129

  &.pull-right
    float: right

