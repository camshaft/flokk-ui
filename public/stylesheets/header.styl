.brand .slogan
  vertical-align: bottom
  font-size: 40%
  line-height: 2.4em

@media (max-width: 768px)
  .brand
    position: fixed
    background: white
    top: 0
    right: 0
    left: 0
    z-index: 100
    height: 45px
    margin: 0

  .brand .company
    height: 36px
    width: 118px
    margin-left: -59px
    position: absolute
    right: 50%
    left: 50%
    bottom: 5px

  .brand .slogan
    display: none

