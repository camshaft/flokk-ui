
alert(color)
  html
  body
  .content
    background color!important

html
body
.content
  relative top
  height 100%


_navbar_pad = 10px
_shift_amount = 200px
_border = 1px solid #ccc

.sidenav
  fixed top $navbar-height
  bottom 0
  width _shift_amount
  overflow auto
  transition opacity 0s $transition-speed-fast
  &.sidenav-categories
    left 0
    ul
      padding 0
      margin 0
  &.sidenav-links
    right 0
  ul
    display block
    overflow-y scroll
    padding 10px
    li
      font-family $headings-font-family
      font-weight $headings-font-weight
      text-transform uppercase
      list-style none
      a
        text-decoration none
        display block
        padding 10px
        &:hover
          color $brand-color

.handler
  display none
  _handler(name, shift)
    &#handler-{name}:checked
      ~ .sidenav-{name}
        opacity 1
        transition opacity 0s 0s
      ~ main
        transform translate3D(shift, 0, 0)
        .content
          overflow hidden

  _handler(nav_lt,  (_shift_amount))
  _handler(nav_rt, -(_shift_amount))

.brand
  fixed top
  z-index $zindex-brand
  .company
    background-size auto ($navbar-height - _navbar_pad)
    height $navbar-height

.promo-image
  overflow hidden

menu.topmenu
  fixed top
  flex-direction row
  justify-content space-between
  height $navbar-height
  width 100%
  display flex
  margin 0
  padding 0
  box-sizing content-box
  border-bottom _border
  background $body-bg
  z-index $zindex-navbar
  label
    height $navbar-height
    width $navbar-height
    padding _navbar_pad
    margin 0
    text-align center
    cursor pointer
    color $navbar-default-brand-color
    i
      font-size $navbar-height - (_navbar_pad * 2)
    &:hover
      color $navbar-default-brand-hover-color

main
  position relative
  height 100%
  transform translate3D(0%, 0, 0)
  transition transform $transition-speed-fast ease-in-out
  z-index $zindex-main
  background $body-bg

.content
  absolute top $navbar-height
  left 0
  right 0
  bottom 0
  overflow-y scroll
  overflow-scrolling touch

@media $media-max-phone

  // alert(green)

  .brand
    absolute top (-($navbar-height))
    text-align center
    width 100%
    background-position 50%
    .company
      relative top $navbar-height

  .sidenav
    z-index $zindex-sidenav-bg

@media $media-screen-min-tablet

  .brand .company
    background-position _navbar_pad

  menu.topmenu label
    display none

  .sidenav
    opacity 1
    z-index $zindex-sidenav-fg

@media $media-tablet

  // alert(blue)

  .content
    margin-right _shift_amount
    margin-left _shift_amount

  .sidenav
    top 0
    &.sidenav-categories
      top $navbar-height
    &.sidenav-links
      width auto
      ul
        padding-top 0
        li
          float left
          a
            padding (_navbar_pad * 1.5) _navbar_pad

@media $media-screen-min-lg-desktop

  // alert(yellow)

  menu.topmenu
    display none

  .content
    _margin = _shift_amount
    margin-right _margin
    margin-left _margin
    top 0

  .sidenav-links
    top 0
