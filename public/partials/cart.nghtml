<div class="cart">
  <ul class="items">
    <li class="item" data-ng-repeat="itemLink in cart.offer" data-ng-include="" src="'/partials/cart-item.nghtml'"></li>
  </ul>
  <a class="checkout action" data-ng-show="cart.checkout" href="/cart/checkout">Checkout</a>
  <div data-ng-show="!cart.count && loaded">
    There are no items in your cart. Get shopping!
  </div>
</div>
