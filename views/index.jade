extends ./layout.jade


block topmenu
  mixin label(name, icon)
    label(for='handler-#{name}')
      i(class="icon-#{icon}")
  +label("primary", "tag")
  figure.brand
    a(href=site).company FLOKK
    // small.slogan DESIGN YOUR LIFE. UP TO 70% OFF.
  +label("secondary", "cart")

block sidenav-handlers
  mixin checkbox(name)
    input(type="checkbox"
          name="handler-#{name}"
          id="handler-#{name}"
          onclick="null").handler
  +checkbox("primary")
  +checkbox("secondary")

block sidenav-contents
  - var _dummy_prim=[ 'asd','zxc','qwe']
  mixin sidenav(cont, partial, name, dummy)
    nav(data-ng-controller=cont
        src=partial
        class="sidenav sidenav-#{name}"
        data-ng-include)
      ul
        for d in dummy
          li: a=d
  +sidenav("NavController", "/partials/nav.nghtml", "primary", _dummy_prim)
  +sidenav("SecondaryNavController", "/partials/secondary-nav.nghtml", "secondary", _dummy_prim)

block content
  div(data-ng-view).content

block prepend scripts
  script(async
         src="https://js.balancedpayments.com/v1/balanced.min.js"
         onload="balanced.init('#{balanced}')")
  script(src="https://d3dy5gmtp8yhk7.cloudfront.net/2.1.1/sockjs.min.js")
  script(src="https://d3dy5gmtp8yhk7.cloudfront.net/2.1/pusher.min.js")
